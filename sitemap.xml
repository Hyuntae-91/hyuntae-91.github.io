---
layout: nil
permalink: /sitemap.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{%- assign urls = site.pages | concat: site.posts | uniq
  | where_exp: "item", "item.sitemap != false" -%}
{%- for item in urls -%}
  <url>
    <loc>{{ item.url | absolute_url }}</loc>
    <lastmod>{{ item.date | date_to_xmlschema | default: site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
  </url>
{%- endfor -%}
</urlset>
